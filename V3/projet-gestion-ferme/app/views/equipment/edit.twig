<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Modifier Equipment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-6">
            <h4 class="text-center">Modifier Equipement</h4>
            <form action="?controller=equipment&&action=updateEedit" method="POST">
                <div class="row mb-3">
                    <div class="col">
                        <input type="hidden" name="id" value="{{ equipment.getId() }}">
                    </div>
                </div>
                <label for="">Nom</label>
                <div class="row mb-3">
                    <div class="col">
                        <input type="text" autofocus class="form-control" name="nom" value="{{ equipment.getNom() }}"><br>
                    </div>
                </div>

                <label for="">État</label>
                <div class="row mb-3">
                    <div class="col">
                        <input type="text" autofocus class="form-control" name="etat" value="{{ equipment.getEtat() }}"><br>
                    </div>
                </div>

                <label for="disponibilite">Disponibilité</label>
                <div class="row mb-3">
                    <div class="col">
                        <select class="form-control" name="disponibilite" required>
                            <option value="">Sélectionner</option>
                            <option value="1" {% if equipment.isDisponible() == 1 %}selected{% endif %}>Disponible</option>
                            <option value="0" {% if equipment.isDisponible() == 0 %}selected{% endif %}>Non disponible</option>
                        </select>
                    </div>
                </div>

                <div class="text-center">
                    <button class="mt-3 btn btn-success" type="submit">Modifier</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
